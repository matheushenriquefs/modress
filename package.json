{
  "name": "ress",
  "description": "A modern CSS reset",
  "version": "5.0.2",
  "author": "Filipe Linhares",
  "bugs": {
    "url": "https://github.com/filipelinhares/ress/issues"
  },
  "devDependencies": {
    "cssnano": "^6.1.0",
    "postcss-cli": "^11.0.0",
    "stylelint": "^16.2.1"
  },
  "homepage": "https://github.com/filipelinhares/ress",
  "keywords": [
    "css",
    "reset"
  ],
  "license": "MIT",
  "main": "dist/ress.min.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/filipelinhares/ress.git"
  },
  "scripts": {
    "compile": "postcss ress.css --no-map -u cssnano -o dist/ress.min.css",
    "shadow": "postcss ./src/*.css --no-map -u cssnano --dir ./shadow",
    "inputs": "postcss ./src/input/*.css --no-map -u cssnano --dir ./shadow/input",
    "compile:shadow": "npm run shadow && npm run inputs",
    "test": "stylelint ress.css ./src/"
  }
}
